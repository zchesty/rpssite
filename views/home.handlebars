<link rel="stylesheet" href="styles/home.css">

<h1>Hello {{name}} welcome to the Rock Paper Scissors Game</h1>

<div class="container">
  <div class="row rowOuter">
    <div class="col">
        <p>User Choice</p>
        <button class="btn-block btn btn-primary btn-lg" id="rock" name="rock">Rock <i class="far fa-hand-rock"></i></button>
        <button class="btn-block btn btn-primary btn-lg" id="paper" name="paper">Paper <i class="far fa-hand-paper"></i></button>
        <button class="btn-block btn btn-primary btn-lg" id="scissors" name="scissors">Scissors <i class="far fa-hand-scissors"></i></button>
    </div>  
    <div class="col col-6">
      <div class="row rowInner">
        <div class="col">
          <p>User choice</p>
          <div class="choiceDisplay" id="userChoice"></div>
        </div>
      </div>
      <div class="row rowInner">
        <div id="result" class="col">
          <p>Result</p>
        </div>
      </div>
      <div class="row rowInner">
        <div class="col">
          <p>Computer choice</p>
          <div class="choiceDisplay" id="computerChoice"></div>
        </div>
      </div>
    </div>
    <div class="col col-4 history">
      <p>History</p>
      <ol id="history">
        
      </ol>
    </div>
  </div>
<script>
  var name = "{{name}}";
</script>
